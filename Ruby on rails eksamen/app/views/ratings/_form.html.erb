<%= form_with(model: rating, remote: true, :html => {:class => 'form-inline'}) do |form| %>
    <% if rating.errors.any? %>
        <div class="alert alert-danger" role="alert">
          <p><strong><%= pluralize(rating.errors.count, "error") %> prohibited this rating from being saved:</strong>
          </p>

          <ul>
            <% rating.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group">
      <%= select_tag('rating[score]', options_for_select([1, 2, 3, 4, 5, 6]),
                     {:class => 'form-control'}) %>
      <%= form.hidden_field :book_id, id: :rating_book_id %>
      <%= form.hidden_field :user_id, id: :rating_user_id %>
    </div>
    <div class="form-group">

      <%= form.submit :class => 'btn btn-success actions' %>

    </div>
    
<% end %>
