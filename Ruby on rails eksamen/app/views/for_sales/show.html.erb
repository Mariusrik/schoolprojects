<p id="notice"><%= notice %></p>

<div class="well">

  <h1>
    <%= @for_sale.book.title %>
  </h1>

  <div class="row">
    <div class="col-md-5">
      <table class="table ">
        <thead>
        <tr>
          <th>
            <strong>Price:</strong>
          </th>
          <th>
            <strong>Contact:</strong>
          </th>
          <th>
            <strong>User:</strong>
          </th>
        </tr>
        </thead>
        <tbody>
        <tr>
          <td>
            <%= @for_sale.price %>
          </td>
          <td>
            <%= @for_sale.contact %>
          </td>
          <td>
            <%= @for_sale.user.name %>
          </td>
        </tr>
        </tbody>
      </table>
    </div>
  </div>

  <p>
    <%= image_tag @for_sale.book.image %>
  </p>

  <% if current_user != nil && current_user.id == @for_sale.user.id %>
      <%= link_to 'Edit', edit_for_sale_path(@for_sale) %> |
  <% elsif current_admin %>
      <%= link_to 'Edit', edit_for_sale_path(@for_sale) %> |
  <% end %>
  <%= link_to 'Back', _back_url %>
</div>

