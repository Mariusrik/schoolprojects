<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <p><strong><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</strong></p>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


    <div class="field limit-form-width">
    <%= form.label :name %>
    <%= form.text_field :name, id: :user_name, :class => 'form-control', :placeholder=>''%>
    </div>


    <div class="field limit-form-width">
    <%= form.label :email %>
    <%= form.text_field :email, id: :user_email , :class => 'form-control', :placeholder=>''%>
  </div>


    <div class="field limit-form-width">
    <%= form.label :password %>
    <%= form.password_field :password_digest, id: :password_digest , :class => 'form-control', :placeholder=>''%>
  </div>


  <div class="field limit-form-width">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_digest_confirmation , :class => 'form-control', :placeholder=>''%>
  </div>

  <% if current_admin %>
    <div class="field col-xs-3">
      <%= form.label :user_profile %>
      <%= select_tag('user[user_profile]',
                     options_for_select(['user','moderator','admin'], @user.user_profile),
                     {:class => 'form-control'}) %>
    </div>
  <% end %>


  <div class="field well well-sm">
    <%= form.label :image %>
    <%= form.file_field :image %>
    <p class="help-block">Upload profile image</p>
  </div>

  <div class="actions ">
    <%= form.submit :class=>"btn btn-default"%>
  </div>
<% end %>
